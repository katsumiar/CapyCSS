<UserControl x:Class="CapybaraVS.Controls.BaseControls.NameLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CapybaraVS.Controls.BaseControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FocusVisualStyle="{x:Null}">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock x:Name="LabelControl" Text="" MouseDown="LabelControl_MouseDoubleClick" VerticalAlignment="Center" HorizontalAlignment="Center" MouseEnter="LabelControl_MouseEnter" MouseLeave="LabelControl_MouseLeave" />
        <TextBox x:Name="EditControl" Visibility="Hidden" Text="" KeyDown="EditControl_KeyDown" VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Grid>
</UserControl>
